<div class="container-fluid bg-dark py-4">
    <div class="row px-lg-5 px-md-4 px-sm-2">
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-white mb-0"><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h2>
                <span class="badge bg-primary p-2">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</span>
            </div>
            <hr class="text-secondary" />
        </div>

        <div class="col-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-graph-up me-2"></i>Overview Statistics
                </div>
                <div class="card-body bg-dark">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-info bg-opacity-10">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 text-muted">Daily Visitors</h6>
                                            <h3 class="card-title mb-0">1,254</h3>
                                            <p class="small text-success mt-2 mb-0">
                                                <i class="bi bi-arrow-up-short"></i> 12% increase
                                            </p>
                                        </div>
                                        <div class="rounded-circle bg-info bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                            <i class="bi bi-people-fill text-info fs-3"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="#" class="text-decoration-none small">View Details <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-success bg-opacity-10">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 text-muted">Weekly Visitors</h6>
                                            <h3 class="card-title mb-0">8,742</h3>
                                            <p class="small text-success mt-2 mb-0">
                                                <i class="bi bi-arrow-up-short"></i> 8% increase
                                            </p>
                                        </div>
                                        <div class="rounded-circle bg-success bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                            <i class="bi bi-bar-chart-fill text-success fs-3"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="#" class="text-decoration-none small">View Details <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-warning bg-opacity-10">
                                    <h6 class="card-subtitle mb-3 text-muted">Performance Goals</h6>
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="small">Daily Goal</span>
                                            <span class="small fw-bold">7,500 / 10,000</span>
                                        </div>
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="small">Weekly Goal</span>
                                            <span class="small fw-bold">36,000 / 100,000</span>
                                        </div>
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar bg-info" role="progressbar" style="width: 36%;" aria-valuenow="36" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="#" class="text-decoration-none small">View Details <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-danger text-white">
                    <i class="bi bi-calendar-event me-2"></i>Event Management
                </div>
                <div class="card-body bg-dark">
                    <div class="row g-4">
                        <div class="col-md-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-danger bg-opacity-10">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 text-muted">Total Events</h6>
                                            <h3 class="card-title mb-0">@ViewBag.TotalEvents</h3>
                                            <p class="small text-danger mt-2 mb-0">
                                                <i class="bi bi-calendar-check"></i> All events
                                            </p>
                                        </div>
                                        <div class="rounded-circle bg-danger bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                            <i class="bi bi-calendar-date-fill text-danger fs-3"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="admin/eventsmanager" class="text-decoration-none small">Manage Events <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-primary bg-opacity-10">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 text-muted">This Week's Events</h6>
                                            <h3 class="card-title mb-0">12</h3>
                                            <p class="small text-primary mt-2 mb-0">
                                                <i class="bi bi-arrow-up-short"></i> 3 more than last week
                                            </p>
                                        </div>
                                        <div class="rounded-circle bg-primary bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                            <i class="bi bi-calendar-week-fill text-primary fs-3"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="#" class="text-decoration-none small">View Schedule <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-success bg-opacity-10">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 text-muted">Total Revenue</h6>
                                            <h3 class="card-title mb-0">@ViewBag.TotalRevenue.ToString("C")</h3>
                                            <p class="small text-success mt-2 mb-0">
                                                <i class="bi bi-currency-dollar"></i> From ticket sales
                                            </p>
                                        </div>
                                        <div class="rounded-circle bg-success bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                            <i class="bi bi-cash-stack text-success fs-3"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="#" class="text-decoration-none small">View Details <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-secondary bg-opacity-10">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 text-muted">Event Analytics</h6>
                                            <h3 class="card-title mb-0">85%</h3>
                                            <p class="small text-success mt-2 mb-0">
                                                <i class="bi bi-arrow-up-short"></i> Average attendance rate
                                            </p>
                                        </div>
                                        <div class="rounded-circle bg-secondary bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                            <i class="bi bi-graph-up-arrow text-secondary fs-3"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="#" class="text-decoration-none small">View Analytics <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-people me-2"></i>User Management
                </div>
                <div class="card-body bg-dark">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <a href="/Admin/UsersManager" class="text-decoration-none">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body bg-success bg-opacity-10">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="card-subtitle mb-2 text-muted">Total Users</h6>
                                                <h3 class="card-title mb-0">@ViewBag.TotalUsers</h3>
                                                <p class="small text-success mt-2 mb-0">
                                                    <i class="bi bi-person-check"></i> Active accounts
                                                </p>
                                            </div>
                                            <div class="rounded-circle bg-success bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                                <i class="bi bi-people-fill text-success fs-3"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent border-0 text-end">
                                        <span class="text-decoration-none small">Manage Users <i class="bi bi-arrow-right"></i></span>
                                    </div>
                                </div>
                            </a>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-info bg-opacity-10">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 text-muted">New Users This Week</h6>
                                            <h3 class="card-title mb-0">@ViewBag.NewUsersThisWeek</h3>
                                            <p class="small text-info mt-2 mb-0">
                                                <i class="bi bi-arrow-up-short"></i> New registrations
                                            </p>
                                        </div>
                                        <div class="rounded-circle bg-info bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                            <i class="bi bi-person-plus-fill text-info fs-3"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="#" class="text-decoration-none small">View Details <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body bg-warning bg-opacity-10">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 text-muted">Active Users</h6>
                                            <h3 class="card-title mb-0" id="activeUsersCount">0</h3>
                                            <p class="small text-warning mt-2 mb-0">
                                                <i class="bi bi-person-check"></i> Currently online
                                            </p>
                                        </div>
                                        <div class="rounded-circle bg-warning bg-opacity-25 p-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                            <i class="bi bi-people-fill text-warning fs-3"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-end">
                                    <a href="#" class="text-decoration-none small">View Online Users <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>